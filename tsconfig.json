{
  "compilerOptions": {
    "target": "es2021",                                 
    "module": "commonjs",                                                    
    "allowJs": true,                                  
    "checkJs": true,                                 
    "declaration": true,                              
    "outDir": "dist",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "alwaysStrict": true,                             
    "skipLibCheck": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": false,
    "noImplicitAny": false,
    "resolveJsonModule": true
  }
}
